extends CheckButton

################################################################################
# PRIVATE METHODS
################################################################################

func _ready():
	update_setting()

################################################################################
# PUBLIC METHODS
################################################################################

func disable():
	disabled = true

################################################################################

func enable():
	disabled = false

################################################################################

func update_setting():
	pressed = SettingsMaster.get_fullscreen_mode()

################################################################################
# SIGNAL HANDLING
################################################################################

func _on_FullscreenMode_toggled(button_pressed):
	SettingsMaster.set_fullscreen_mode(button_pressed)
