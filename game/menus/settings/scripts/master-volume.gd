extends HSlider

################################################################################
# PRIVATE METHODS
################################################################################

func _ready():
	update_setting()

################################################################################
# PUBLIC METHODS
################################################################################

func disable():
	editable = false

################################################################################

func enable():
	editable = true

################################################################################

func update_setting():
	value = SettingsMaster.get_master_volume()

################################################################################
# SIGNAL HANDLING
################################################################################

func _on_HSlider_value_changed(value):
	SettingsMaster.set_master_volume(value)
